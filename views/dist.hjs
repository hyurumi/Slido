<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Slido</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

        <link rel="stylesheet" href="stylesheets/normalize.css">
        <link rel="stylesheet" href="stylesheets/dist.css">
        <script src="javascripts/vendor/modernizr-2.6.2.min.js"></script>
        <script type="text/template" id="slide-title-template">
        <div class="slide">
            <div class='header'>
                <p class='element'> <%= header %></p>
            </div>
            <div class='body'>
                <p class='element'><%= body %></p>
            </div>
        </div>
        </script>
        <script type="text/template" id="slide-standard-template">
        <div class="slide">
            <div class='header'>
                <p class='element'><%= header %></p>
            </div>
            <div class='body'>
                <p class='element'><%= body %></p>
            </div>
        </div>
        </script>
    </head>
    <body>
    <div id="wrapper">
        <div id="slides" class='slides  clearfix' style='display:none'>
            {{#slides}}
                <div class="slides-pack">
                    <div class="slide-wrapper">
                {{#slideTitle}}
                <div class="slide slide-title">
                    <div class='header'>
                        <p class='element'> {{ header}} </p>
                    </div>
                    <div class='body'>
                        <p class='element'> {{body}} </p>
                    </div>
                </div>
                {{/slideTitle}}
                {{#slideStandard}}
                <div class="slide">
                    <div class='header'>
                        <p class='element'> {{ header}} </p>
                    </div>
                    <div class='body'>
                        <p class='element'> {{ body }}</p>
                    </div>
                </div>      
                {{/slideStandard}}
                </div>
                </div>
            {{/slides}}
        </div>
    </div>

        <script src="javascripts/vendor/jquery-1.9.0.min.js"></script>
        <script src="javascripts/vendor/socket.io.js"></script>
        <script src="https://raw.github.com/flatiron/director/master/build/director.min.js"></script>
        <script src="http://underscorejs.org/underscore.js"></script>
        <script src="javascripts/dist.js"></script>
        <script type="text/javascript">
          Slido.initialize();
        </script>
    </body>
</html>
